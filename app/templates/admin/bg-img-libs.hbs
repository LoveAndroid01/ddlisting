<nav class="navbar navbar-default opacity09" style="border-radius: 0; z-index: 1100;">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#app-main-header-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'admin.bgImgLibs' class="navbar-brand"}}
      DDLISTING
      {{/link-to}}
    </div>

    <div class="collapse navbar-collapse">
      <!-- 分辨率小于768px不显示 -->
      <ul class="nav navbar-nav navbar-right min-width-768">
        <li><a>退出</a></li>
      </ul>


    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


<div class="container-fluid admin-img-list">
    <div class="panel panel-default">
      <div class="panel-heading">
          <button type="button" name="button" class="btn btn-primary" data-toggle="modal" data-target="#newBgImg">新&nbsp;增</button>
      </div>
      <div class="panel-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>图片介绍</th>
                <th>图片路径</th>
                <th>上传日期</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
                {{#each model as |bg|}}
              <tr>
                <th scope="row">{{bg.id}}</th>
                <td>{{bg.imgTitle}}</td>
                <td>{{bg.imgUrl}}</td>
                <td>{{bg.imgUploadTime}}</td>
                <td>
                    <span {{action 'edit' bg.id}}>编辑</span>
                </td>
              </tr>
              {{/each}}

            </tbody>
          </table>
      </div>
    </div>

</div>

{{! 新增背景图片}}
{{admin/new-edit-bg-img store=store model=model}}

