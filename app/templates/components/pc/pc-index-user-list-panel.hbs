<div class="panel panel-default">
  <div class="panel-heading">排行榜</div>
  <div class="panel-body">
      <ul class="list-group">
          {{#each enabledUserList as |user|}}
            <li class="list-group-item">
                <img src={{user.userProfile}} alt="" class="img-circle" height="30px" />
                {{#if (eq user.email model.user.email)}}
                    {{! 查询出默认的分类}}
                    {{#each user.projects as |proj|}}
                        {{#if proj.isDefaultProj}}
                            {{#link-to 'pc.projects.todos' proj.id}}{{user.email}}{{/link-to}}
                        {{/if}}
                    {{/each}}
                {{else}}
                    {{user.email}}
                {{/if}}
                <span class="grade">{{user.myTodoCount}}</span>
            </li>
          {{/each}}
      </ul>
  </div>
</div>
