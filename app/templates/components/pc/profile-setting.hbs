{{! app/templates/components/profile-setting.hbs pc端个人设置页面
@Author: ubuntuvim
@Date:   2016-07-03T15:54:11+08:00
@Last modified by:   ubuntuvim
@Last modified time: 2016-07-12T01:41:10+08:00
}}
<div class="modal fade pc-profile-modal-win" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="panel panel-primary">
          <div class="panel-heading">
              <!-- <div class="return-tools">
                  <span class="glyphicon glyphicon-menu-left"></span>
              </div> -->
              <div class="profile-img">
                  <img src={{model.user.userProfile}} alt="" class="img-circle" />
              </div>
              <div class="profile-name">
                  {{model.user.nickname}}
              </div>
          </div>
          <div class="panel-body">
              <div class="">
                  <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#account" aria-controls="account" role="tab" data-toggle="tab">账户</a></li>
                    <li role="presentation"><a href="#setting" aria-controls="setting" role="tab" data-toggle="tab">设置</a></li>
                  </ul>

                  <!-- Tab panes -->
                  <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="account">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-3 col-xs-3">
                                        <span class="glyphicon glyphicon-envelope"></span>邮箱：
                                    </div>
                                    <div class="col-md-9 col-xs-9">
                                        {{model.user.email}}
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item nickname-li">
                                <div class="row">
                                    <div class="show-text col-md-3 col-xs-3">
                                        <span class="glyphicon glyphicon-magnet"></span>用户名：
                                    </div>
                                    <div class="col-md-9 col-xs-9">
                                        {{input type="text" value=model.user.nickname
                                        name="nickname" class="form-control" onblur=(action 'updateNickname' (mut model.value))}}
                                    </div>
                                </div>
                            </li>

                            <li class="list-group-item enable-click" data-toggle="collapse" data-target="#resetUserProfileImg"
                                aria-expanded="false" aria-controls="collapseExample">
                                <span class="glyphicon glyphicon-lock"></span>修改头像
                            </li>
                            <li class="list-group-item reset-password">
                                <div class="collapse" id="resetUserProfileImg">
                                    <div class="" style="margin-top:15px;">
                                    </div>
                                    <form class="form-horizontal">
                                        <div class="form-group">
                                          <label for="newPwd" class="col-sm-2 control-label">上传新头像</label>
                                          <div class="col-sm-10">
                                            {{pc/profile-img-upload model=model}}
                                          </div>
                                          <div class="" id="uploadProfileImgLoading" style="display:none; text-align: center;">
                                              <img src="/assets/images/loading/loading.gif" />
                                          </div>
                                          <div class="" id="uploadProfileImgLoadingText" style="display:none; text-align: center;">
                                              <p class="text-success">图片上传完毕</p>
                                          </div>
                                        </div>
                                    </form>
                                </div>
                            </li>

                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-3 col-xs-3">
                                        <span class="glyphicon glyphicon-magnet"></span>用户等级：
                                    </div>
                                    <div class="col-md-9 col-xs-9">
                                        免费用户
                                        <span class="upgrade-user-grade-text text-primary pull-right">升级至高级用户享受更多特权</span>
                                        <a data-toggle="tooltip" data-placement="top"
                                            title="高级用户享有更多特权：指派任务给您的组员、好友，创建一个小组任务，无限上传附件，无限主题背景。"
                                            onmouseover="javascript:$(this).tooltip('toggle');" class="pull-right">
                                            <i class="iconfont question">&#xe61e;</i>
                                        </a>
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-3 col-xs-3">
                                    <span class="glyphicon glyphicon-calendar"></span>注册时间：
                                    </div>
                                    <div class="col-md-9 col-xs-9">
                                        {{format-date model.user.createDate}}
                                    </div>
                                </div>
                            </li>
                            <!-- <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-3 col-xs-3">
                                        <span class="glyphicon glyphicon-home"></span>我的主页：
                                    </div>
                                    <div class="col-md-9 col-xs-9">
                                        <a href="http://www.ddlisting.com">http://www.ddlisting.com</a>
                                    </div>
                                </div>
                            </li> -->
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-3 col-xs-3">
                                    <span class="glyphicon glyphicon-yen"></span>我的积分：
                                    </div>
                                    <div class="col-md-9 col-xs-9">
                                        88
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-3 col-xs-3">
                                        <span class="glyphicon glyphicon-th"></span>我的TODO数：
                                    </div>
                                    <div class="col-md-9 col-xs-9">
                                        100
                                    </div>
                                </div>
                            </li>

                            <li class="list-group-item enable-click" data-toggle="collapse" data-target="#resetAccountPassword"
                                aria-expanded="false" aria-controls="collapseExample">
                                <span class="glyphicon glyphicon-lock"></span>修改密码
                            </li>
                            <li class="list-group-item reset-password">
                                <div class="collapse" id="resetAccountPassword">
                                    <div class="" style="margin-top:15px;">

                                    </div>
                                    <form class="form-horizontal" id="resetPasswordForm" {{action 'resetPassword' model.user.id on='submit'}} >
                                        <div class="form-group">
                                          <label for="newPwd" class="col-sm-2 control-label">新密码</label>
                                          <div class="col-sm-10">
                                            {{input type="password" class="form-control" id="newPwd" name="newPwd" value=model.user.password placeholder="请输入新密码" style="width:97%;"}}
                                          </div>
                                        </div>
                                        <div class="form-group">
                                          <label for="comNewPwd" class="col-sm-2 control-label">确认密码</label>
                                          <div class="col-sm-10">
                                            {{input type="password" class="form-control" id="comNewPwd" name="comNewPwd" placeholder="请输入确认密码" style="width:97%;"}}
                                          </div>
                                        </div>
                                        <div class="form-group">
                                           <div class="col-sm-offset-2 col-sm-10">
                                             <button type="button" class="btn btn-default" onclick="javascript: $('#resetAccountPassword').collapse('hide');">取消</button>
                                             <button type="submit" class="btn btn-primary">修改</button>

                                             <span class="col-sm-offset-2 col-md-offset-2 text-default" id="tipInfoId">
                                                 {{#if msg}}
                                                 {{msg}}
                                                 {{/if}}
                                             </span>
                                           </div>

                                         </div>
                                    </form>
                                </div>
                            </li>

                            <li class="list-group-item enable-click" {{action 'logout'}}>
                                <span class="glyphicon glyphicon-log-out"></span>
                                退出
                            </li>
                        </ul>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="setting">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="show-text col-md-3 col-xs-3">
                                        <span class="glyphicon glyphicon-bell"></span>消息邮件通知：
                                    </div>
                                    <div class="col-md-9 col-xs-9">
                                        {{#if model.user.profile.isOpenEmailNotification}}
                                        <input type="checkbox" name="isOpenEmailNotification" checked value="1"
                                        {{action 'resetEmailNotification' model.user.profile.id model.user.profile.isOpenEmailNotification}}>
                                        {{else}}
                                        <input type="checkbox" name="isOpenEmailNotification" value="0"
                                        {{action 'resetEmailNotification' model.user.profile.id model.user.profile.isOpenEmailNotification}}>
                                        {{/if}}
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-3 col-xs-3">
                                        <span class="glyphicon glyphicon-volume-up"></span>提示音：
                                    </div>
                                    <div class="col-md-9 col-xs-9">
                                        {{#if model.user.profile.isOpenPromptTone}}
                                        <input type="checkbox" name="isOpenPromptTone" checked value="1"
                                        {{action 'resetPromptTone' model.user.profile.id model.user.profile.isOpenPromptTone}}>
                                        {{else}}
                                        <input type="checkbox" name="isOpenPromptTone" value="0"
                                        {{action 'resetPromptTone' model.user.profile.id model.user.profile.isOpenPromptTone}}>
                                        {{/if}}
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-3 col-xs-3">
                                    <span class="glyphicon glyphicon-comment"></span>意见反馈：
                                    </div>
                                    <div class="col-md-9 col-xs-9">
                                        <a href="http://www.ddlisting.com/#ddfeedback" target="_blank">http://www.ddlisting.com/#ddfeedback</a>
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-3 col-xs-3">
                                    <span class="glyphicon glyphicon-question-sign"></span>联系我们：
                                    </div>
                                    <div class="col-md-9 col-xs-9">
                                        242650456<br>
                                        1527254027@qq.com<br>
                                        <a target="_blank" href="http://www.ddlisting.com">HTTP://WWW.DDLISTING.COM</a>
                                    </div>
                                </div>
                            </li>

                        </ul>
                    </div>
                  </div>

              </div>
          </div>
        </div>
    </div>
  </div>
</div>
